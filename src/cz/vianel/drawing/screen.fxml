<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<BorderPane fx:id="borderPane" prefHeight="200.0" prefWidth="500.0" stylesheets="@css/main.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.vianel.drawing.ScreenController">
    <center>
        <ImageView fx:id="imageView" preserveRatio="true" smooth="true" BorderPane.alignment="CENTER" />
    </center>
    <top>
        <ToolBar prefHeight="0">
            <items>
                <Button fx:id="openImage" mnemonicParsing="false" onAction="#openImage">
                    <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@images/appbar.image.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            <Separator orientation="VERTICAL" />
                <Button fx:id="cropImage" mnemonicParsing="false" onAction="#cropImage">
                    <graphic>
                        <ImageView disable="true" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@images/appbar.crop.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            <ComboBox fx:id="cropImageRatio" prefWidth="150.0" disable="true" editable="true" onAction="#cropImageRation" />
            </items>
        </ToolBar>

    </top>
</BorderPane>
