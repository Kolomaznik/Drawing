<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>

<ToolBar fx:id="toolBar" stylesheets="@stylesheets/main.css" xmlns="http://javafx.com/javafx/8"
         xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.vianel.artwork.fx.MainToolBarController">
    <items>
        <Button fx:id="openImage" mnemonicParsing="false" onAction="#openImage">
            <graphic>
                <ImageView pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@icon/appbar.image.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="editImage" mnemonicParsing="false" onAction="#editImage">
            <graphic>
                <ImageView pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@icon/appbar.edit.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </items>
</ToolBar>
