<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.Group?>

<ToolBar fx:id="toolBar" stylesheets="@stylesheets/main.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.vianel.artwork.fx.ToolBarController">
        <items>
            <Button fx:id="openImage" mnemonicParsing="false" onAction="#openImage">
                <graphic>
                    <ImageView pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@icon/appbar.image.hdr.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="editImage" mnemonicParsing="false" onAction="#editImage">
                <graphic>
                    <ImageView disable="true" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@icon/appbar.edit.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </items>
    </ToolBar>
