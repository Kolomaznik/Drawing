<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<?import javafx.scene.layout.Pane?>
<BorderPane fx:id="borderPane" stylesheets="@stylesheets/main.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.vianel.artwork.fx.ArtworkController">
    <top>
        <fx:include fx:id="mainToolBar" source="MainToolBar.fxml" />
    </top>
    <center>
      <Pane fx:id="imageGroup">
         <children>
            <ImageView fx:id="imageView" preserveRatio="true" smooth="true" />
         </children>
      </Pane>
    </center>
    <bottom>
        <fx:include fx:id="editToolBar" source="EditToolBar.fxml" visible="false" />
    </bottom>
</BorderPane>
